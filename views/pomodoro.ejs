<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Pomodoro | Study Buddy</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .timer-display {
            font-size: 5rem;
            font-weight: bold;
        }

        body {
            background-color: #f8f9fa;
            min-height: 100vh;
        }
    </style>
</head>

<body>
    <div class="content-card">


        <% if (success && success.length) { %>
            <div class="alert alert-success">
                <%= success[0] %>
            </div>
            <% } %>

                <% if (error && error.length) { %>
                    <div class="alert alert-danger">
                        <%= error[0] %>
                    </div>
                    <% } %>

                        <div class="container d-flex align-items-center justify-content-center min-vh-100">
                            <div class="card shadow-lg p-4 text-center" style="max-width: 400px; border-radius: 20px;">
                                <div class="card-body">

                                    <h2 id="mode" class="mb-4">Focus Time</h2>

                                    <div class="timer-display mb-4" id="timer">25:00</div>

                                    <div class="d-grid gap-2 d-md-block mb-4">
                                        <button class="btn btn-outline-primary" onclick="setFocus()">Work</button>
                                        <button class="btn btn-outline-success" onclick="setShortBreak()">Short
                                            Break</button>
                                        <button class="btn btn-outline-info" onclick="setLongBreak()">Long
                                            Break</button>
                                    </div>

                                    <div>
                                        <button class="btn btn-primary btn-lg px-4" id="start">Start</button>
                                        <button class="btn btn-secondary btn-lg px-4" id="pause">Pause</button>
                                        <button class="btn btn-danger btn-lg px-4" id="reset">Reset</button>
                                    </div>

                                </div>
                            </div>
                        </div>

    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Pomodoro Logic -->
    <script src="/js/pomodoro.js"></script>
</body>

</html>