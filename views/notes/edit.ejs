<div>
  <h1>Edit Note</h1>

  <form action="/notes/<%= note._id %>?_method=PUT" method="POST">
    <input
      type="text"
      name="note[title]"
      value="<%= note.title %>"
      required
    />
    <br />

    <textarea name="note[content]" required>
<%= note.content %>
    </textarea>
    <br />

    <input
      type="text"
      name="note[tag]"
      value="<%= note.tag %>"
    />
    <br />

    <button>Update</button>
  </form>
</div>
